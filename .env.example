# AttackFlow Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit the .env file to version control

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3000

# ==============================================
# SESSION CONFIGURATION
# ==============================================
# Generate a secure random string for production (minimum 32 characters)
# Example: openssl rand -hex 32
SESSION_SECRET=your-secure-session-secret-change-in-production

# Session cookie settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_MAX_AGE=86400000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=attackflow
DB_USER=root
DB_PASSWORD=

# Connection pool settings
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# ==============================================
# RATE LIMITING CONFIGURATION
# ==============================================
# General API rate limit (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication endpoints (stricter limits)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# File upload rate limit
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
UPLOAD_RATE_LIMIT_MAX_REQUESTS=20

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Bcrypt salt rounds (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=12

# Maximum file upload size in bytes (50MB default)
MAX_FILE_SIZE=52428800

# Allowed file extensions (comma-separated)
ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx,.txt

# ==============================================
# CORS CONFIGURATION (if needed)
# ==============================================
# CORS_ORIGIN=http://localhost:3000

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=dev
